# ---------- Public Gateway ----------
PUBLIC_PORT=9136             # exposed port on the host
VITE_BASE_PATH=/team8        # path prefix for the SPA + gateway
VITE_API_BASE=/team8/api     # API prefix routed by gateway

# ---------- Backend (Django) ----------
DEBUG=False
DJANGO_SECRET_KEY=change-me
ALLOWED_HOSTS=*

BACKEND_POSTGRES_DB=backend_db
BACKEND_POSTGRES_USER=backend_user
BACKEND_POSTGRES_PASSWORD=backend_pass
BACKEND_DATABASE_URL=postgresql://backend_user:backend_pass@backend-db:5432/backend_db

AI_SERVICE_URL=http://ai-service:8001
INTERNAL_API_KEY=team8-internal-secret-change-me

# ---------- AI Service ----------
AI_POSTGRES_DB=ai_db
AI_POSTGRES_USER=ai_user
AI_POSTGRES_PASSWORD=ai_pass
AI_DATABASE_URL=postgresql://ai_user:ai_pass@ai-db:5432/ai_db
BACKEND_URL=http://backend:8002

# ---------- MinIO / S3 ----------
MINIO_IMAGE=quay.io/minio/minio:latest
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_REGION_NAME=us-east-1

S3_BUCKET_NAME=team8-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
# Internal URL used by backend/AI to talk to MinIO
S3_ENDPOINT_URL=http://minio:9000
# Public URL baked into presigned URLs so the browser can fetch via the gateway (same host/port as gateway)
S3_PUBLIC_ENDPOINT=http://localhost:9136/team8
